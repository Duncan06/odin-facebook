<div class="comment">
  <h4>
    <% user = User.find(comment.user_id) %>
    <% name = user.email[/[^@]+/] %>
    Comment by <%= name %>
  </h4>
  <p>
    <%= comment.body %>
  </p>
  <div>
    <%= link_to "Edit", edit_comment_path(comment) %>
    <%= button_to "Delete", comment_path(comment), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
  <p>
    <% current_post = Post.find(comment.parent_id) %>
    Commented <%= distance_of_time_in_words(current_post.created_at, comment.created_at) %> later
  </p>
</div>
