<h1>
  Profile Page
</h1>
<h3>
  <%= @user.email[/[^@]+/] %>
</h3>
<div class="profile_picture">
  <% if @user.avatar.attached? %>
    <%= image_tag(@user.avatar, size: "100x100") %>
  <% end %>
</div>
<div class="profile_description">
  <%= @user.profile_description %>
</div>
<div class="posts">
  <% @posts.each do |post| %>
    <%= render partial: "posts/post_body", locals: { post: post } %>
  <% end %>
</div>
