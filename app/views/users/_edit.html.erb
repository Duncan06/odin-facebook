<h4>Profile information</h4>
<%= form_with @current_user do |f| %>
  <h5>Add or change profile description</h5>
  <p>
    <%= f.label :profile_description %>
    <%= f.text_area :profile_description %>
  </p>
  <h5>Change email</h5>
  <p>
    <%= f.label :email %>
    <%= f.text_area :email %>
  </p>
  <h5>Add or change profile picture</h5>
  <p>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </p>
<% end %>
