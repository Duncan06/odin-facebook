<h4>Profile information</h4>
<%= form_with(model: current_user) do |f| %>
  <h5>Add or change profile description</h5>
  <p>
    <%= f.label :profile_description %>
    <%= f.text_area :profile_description, maxlength: 255 %>
  </p>
  <h5>Add or change profile picture</h5>
  <p>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </p>
  <p>
    <%= f.submit "Update profile" %>
  </p>
<% end %>
