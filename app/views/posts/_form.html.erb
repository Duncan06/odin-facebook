<%= form_with model: @post do |f| %>
  <h4>Create a post</h4>
  <div class="text_body">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="post_image">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="submit_button">
    <%= f.submit "Post" %>
  </div>
<% end %>
